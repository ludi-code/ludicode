<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ludicode"
        android:id="@+id/ludicodeTv"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:textColor="#83c2ff"
        android:textSize="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ludicodeTv"
        android:layout_marginTop="40dp"
        android:background="#d0d0d0"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pseudo"
            android:id="@+id/pseudoTv"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="57dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mot de passe"
            android:id="@+id/mdpTv"
            android:textSize="20dp"
            android:layout_below="@+id/pseudoTv"
            android:layout_alignLeft="@+id/pseudoTv"
            android:layout_alignStart="@+id/pseudoTv"
            android:layout_marginTop="70dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pseudoField"
            android:layout_alignBottom="@+id/pseudoTv"
            android:layout_toRightOf="@+id/mdpTv"
            android:layout_toEndOf="@+id/mdpTv"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:width="120dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/mdpField"
            android:layout_alignBottom="@+id/mdpTv"
            android:layout_alignLeft="@+id/pseudoField"
            android:layout_alignStart="@+id/pseudoField"
            android:width="120dp" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connexion"
        android:id="@+id/connexionButton"
        android:background="#54dd43"
        style="@style/AlertDialog.AppCompat.Light"
        android:width="120dp"
        android:height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:onClick="connexion" />
</RelativeLayout>
